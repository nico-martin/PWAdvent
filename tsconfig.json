{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@comps/*": [
        "components/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@theme": [
        "theme/index.ts"
      ],
      "@store/*": [
        "store/*"
      ],
      "@types/*": [
        "@types/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
